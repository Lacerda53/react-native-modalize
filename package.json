{
  "name": "react-native-modalize",
  "version": "2.0.13",
  "description": "A highly customizable modal/bottom sheet that loves scrolling content.",
  "author": "Jérémy Barbet",
  "license": "MIT",
  "homepage": "https://github.com/jeremybarbet/react-native-modalize",
  "repository": {
    "type": "git",
    "url": "https://github.com/jeremybarbet/react-native-modalize"
  },
  "main": "lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "rm -rf ./lib/* && yarn lint && tsc",
    "prepare": "yarn build",
    "postversion": "sh ./post-version.sh",
    "watch:modalize": "yarn tsc --watch",
    "watch:expo": "concurrently \"yarn watch:modalize\" \"yarn cpx 'src/**/*' 'examples/expo/node_modules/react-native-modalize' --watch\"",
    "watch:react-native-navigation": "concurrently \"yarn watch:modalize\" \"yarn cpx 'src/**/*' 'examples/react-native-navigation/node_modules/react-native-modalize' --watch\"",
    "watch:react-navigation": "concurrently \"yarn watch:modalize\" \"yarn cpx 'src/**/*' 'examples/react-navigation/node_modules/react-native-modalize' --watch\"",
    "lint": "yarn lint:tsc && yarn lint:eslint && yarn lint:prettier",
    "lint:ci": "yarn lint:eslint -f ./node_modules/@firmnav/eslint-github-actions-formatter/dist/formatter.js && yarn lint:prettier",
    "lint:tsc": "tsc -p tsconfig.json --noEmit --skipLibCheck",
    "lint:eslint": "eslint --fix '{docs,examples,src}/**/*.{ts,tsx,js,json,md}'",
    "lint:prettier": "prettier --write \"{docs,examples,src}/**/*.{ts,tsx,js,json,md}\"",
    "format": "git ls-files -m | xargs yarn prettier --write --ignore-unknown --no-error-on-unmatched-pattern"
  },
  "keywords": [
    "react-native",
    "react",
    "native",
    "modal",
    "bottom sheet",
    "bottom",
    "sheet",
    "scrollView",
    "flatList",
    "sectionList",
    "scroll",
    "swipe",
    "keyboard",
    "snap",
    "android",
    "ios"
  ],
  "devDependencies": {
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "9.1.2",
    "@firmnav/eslint-github-actions-formatter": "1.0.1",
    "@types/react": "17.0.29",
    "@types/react-native": "0.65.6",
    "@typescript-eslint/eslint-plugin": "3.10.1",
    "@typescript-eslint/parser": "3.10.1",
    "concurrently": "5.3.0",
    "cpx": "1.5.0",
    "eslint": "7.14.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-native": "3.10.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "prettier": "2.2.1",
    "react": "17.0.2",
    "react-native": "0.66.0",
    "react-native-gesture-handler": "1.10.3",
    "typescript": "3.9.7"
  },
  "peerDependencies": {
    "react": "> 15.0.0",
    "react-native": "> 0.50.0",
    "react-native-gesture-handler": "> 1.0.0"
  }
}
