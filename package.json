{
  "name": "react-native-modalize",
  "version": "2.0.13",
  "description": "A highly customizable modal/bottom sheet that loves scrolling content.",
  "author": "Jérémy Barbet",
  "license": "MIT",
  "homepage": "https://github.com/jeremybarbet/react-native-modalize",
  "repository": {
    "type": "git",
    "url": "https://github.com/jeremybarbet/react-native-modalize"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "!lib/typescript/example"
  ],
  "scripts": {
    "build": "bob build",
    "prepare": "yarn build",
    "postversion": "sh ./post-version.sh",
    "release": "release-it",
    "lint": "yarn lint:tsc && yarn lint:eslint && yarn lint:prettier",
    "lint:ci": "yarn lint:eslint -f ./node_modules/@firmnav/eslint-github-actions-formatter/dist/formatter.js && yarn lint:prettier",
    "lint:tsc": "tsc -p tsconfig.json --noEmit --skipLibCheck",
    "lint:eslint": "eslint --fix '{docs,example,src}/**/*.{ts,tsx,js}'",
    "lint:prettier": "prettier --write \"{docs,example,src}/**/*.{ts,tsx,js,json,md}\"",
    "format": "git ls-files -m | xargs yarn prettier --write --ignore-unknown --no-error-on-unmatched-pattern"
  },
  "keywords": [
    "react-native",
    "react",
    "native",
    "modal",
    "bottom sheet",
    "bottom",
    "sheet",
    "scrollView",
    "flatList",
    "sectionList",
    "scroll",
    "swipe",
    "keyboard",
    "snap",
    "android",
    "ios"
  ],
  "devDependencies": {
    "@commitlint/cli": "17.0.1",
    "@commitlint/config-conventional": "17.0.0",
    "@firmnav/eslint-github-actions-formatter": "1.0.1",
    "@release-it/conventional-changelog": "5.0.0",
    "@types/react-native": "0.67.7",
    "@typescript-eslint/eslint-plugin": "5.26.0",
    "@typescript-eslint/parser": "5.26.0",
    "eslint": "8.16.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "prettier": "2.6.2",
    "react": "17.0.2",
    "react-native": "0.68.2",
    "react-native-builder-bob": "0.18.2",
    "react-native-gesture-handler": "2.4.2",
    "release-it": "15.0.0",
    "typescript": "4.7.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": "*"
  },
  "resolutions": {
    "@types/react": "^17"
  }
}
